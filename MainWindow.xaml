<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="DiscordAvatars.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:DiscordAvatars.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="Root" Padding="24" RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Spacing="12">
            <Button
                Content="Actualizar servidores"
                Command="{Binding RefreshCommand}"
                IsEnabled="{Binding CanRefresh}" />
            <Button
                Content="Actualizar usuarios"
                Command="{Binding RefreshMembersCommand}"
                IsEnabled="{Binding CanRefreshMembers}" />
        </StackPanel>

        <StackPanel Grid.Row="1" Spacing="6">
            <Grid ColumnSpacing="12" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Content="Seleccionar carpeta archivos"
                    Click="OnSelectFolderClick"
                    VerticalAlignment="Center" />
                <TextBlock
                    Grid.Column="1"
                    Text="{Binding SelectedFolderPath}"
                    TextTrimming="CharacterEllipsis"
                    VerticalAlignment="Center" />
            </Grid>
            <TextBlock Text="{Binding FolderStatusMessage}" Foreground="Tomato" />
        </StackPanel>

        <Grid Grid.Row="2" ColumnSpacing="12" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Servidor:" VerticalAlignment="Center" />
            <ComboBox
                Grid.Column="1"
                ItemsSource="{Binding Guilds}"
                SelectedItem="{Binding SelectedGuild, Mode=TwoWay}"
                DisplayMemberPath="Name"
                VerticalAlignment="Center" />
            <TextBlock
                Grid.Column="2"
                Text="{Binding StatusMessage}"
                TextTrimming="CharacterEllipsis"
                VerticalAlignment="Center" />
        </Grid>

        <Grid Grid.Row="3" ColumnSpacing="16" RowSpacing="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <views:MemberSlotControl Grid.Row="0" Grid.Column="0" Title="Player 1" DataContext="{Binding Slot1}" />
            <views:MemberSlotControl Grid.Row="0" Grid.Column="1" Title="Player 2" DataContext="{Binding Slot2}" />
            <views:MemberSlotControl Grid.Row="1" Grid.Column="0" Title="Player 3" DataContext="{Binding Slot3}" />
            <views:MemberSlotControl Grid.Row="1" Grid.Column="1" Title="Player 4" DataContext="{Binding Slot4}" />
        </Grid>

        <StackPanel Grid.Row="4" Spacing="8">
            <Button
                Content="Actualizar Archivos"
                Command="{Binding UpdateFilesCommand}" />
            <TextBlock
                Text="{Binding FooterMessage}"
                Opacity="0.7"
                TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</Window>
