<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="DiscordAvatars.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:DiscordAvatars.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="Root" Padding="24" RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Spacing="12">
            <Button
                Content="Login con Discord"
                Command="{Binding LoginCommand}"
                IsEnabled="{Binding CanLogin}" />
            <Button
                Content="Actualizar servidores"
                Command="{Binding RefreshCommand}"
                IsEnabled="{Binding CanRefresh}" />
        </StackPanel>

        <TextBlock Grid.Row="1" Text="{Binding StatusMessage}" TextWrapping="Wrap" />

        <ListView Grid.Row="2" ItemsSource="{Binding Guilds}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:DiscordGuild">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="{x:Bind Name}" FontSize="16" />
                        <TextBlock Text="{x:Bind Id}" Opacity="0.6" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <TextBlock
            Grid.Row="3"
            Text="{Binding FooterMessage}"
            Opacity="0.7"
            TextWrapping="Wrap" />
    </Grid>
</Window>
