<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="DiscordAvatars.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:DiscordAvatars.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="Root" Padding="24" RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Spacing="12">
            <Button
                Content="Login con Discord"
                Command="{Binding LoginCommand}"
                IsEnabled="{Binding CanLogin}" />
            <Button
                Content="Actualizar servidores"
                Command="{Binding RefreshCommand}"
                IsEnabled="{Binding CanRefresh}" />
            <Button
                Content="Actualizar usuarios"
                Command="{Binding RefreshMembersCommand}"
                IsEnabled="{Binding CanRefreshMembers}" />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="12">
            <TextBlock Text="Servidor:" VerticalAlignment="Center" />
            <ComboBox
                Width="320"
                ItemsSource="{Binding Guilds}"
                SelectedItem="{Binding SelectedGuild, Mode=TwoWay}"
                DisplayMemberPath="Name"
                IsEnabled="{Binding IsAuthenticated}" />
            <TextBlock Text="{Binding StatusMessage}" TextWrapping="Wrap" VerticalAlignment="Center" />
        </StackPanel>

        <Grid Grid.Row="2" ColumnSpacing="16" RowSpacing="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <views:MemberSlotControl Grid.Row="0" Grid.Column="0" DataContext="{Binding Slot1}" />
            <views:MemberSlotControl Grid.Row="0" Grid.Column="1" DataContext="{Binding Slot2}" />
            <views:MemberSlotControl Grid.Row="1" Grid.Column="0" DataContext="{Binding Slot3}" />
            <views:MemberSlotControl Grid.Row="1" Grid.Column="1" DataContext="{Binding Slot4}" />
        </Grid>

        <TextBlock
            Grid.Row="3"
            Text="{Binding FooterMessage}"
            Opacity="0.7"
            TextWrapping="Wrap" />
    </Grid>
</Window>
